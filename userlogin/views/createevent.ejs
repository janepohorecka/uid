
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Create_Event
        </h1>
        <%- include ./partials/messages %>
        <form action="/events/createevent" method="POST">
          <div class="form-group">
            <label for="clubID">clubID</label>
            <input
              type="clubID"
              id="clubID"
              name="clubID"
              class="form-control"
              placeholder="Enter clubID"
              value="<%= typeof clubID != 'undefined' ? clubID : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="userID">userID</label>
            <input
              type="userID"
              id="userID"
              name="userID"
              class="form-control"
              placeholder="Enter userID"
              value="<%= typeof userID != 'undefined' ? userID : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="eventID">eventID</label>
            <input
              type="eventID"
              id="eventID"
              name="eventID"
              class="form-control"
              placeholder="Create eventID"
              value="<%= typeof eventID != 'undefined' ? eventID : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="name">name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Event Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="description">description</label>
            <input
              type="description"
              id="description"
              name="description"
              class="form-control"
              placeholder="Event Description"
              value="<%= typeof description != 'undefined' ? description : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="StartTime">StartTime</label>
            <input
              type="datetime"
              id="StartTime"
              name="StartTime"
              class="form-control"
              placeholder="StartTime"
              value="<%= typeof StartTime != 'undefined' ? StartTime : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="EndTime">EndTime</label>
            <input
              type="datetime"
              id="EndTime"
              name="EndTime"
              class="form-control"
              placeholder="EndTime"
              value="<%= typeof EndTime != 'undefined' ? EndTime : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Create Event
          </button>
        </form>
      </div>
    </div>
  </div>
  