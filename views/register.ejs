<!DOCTYPE html>
<html lang = "en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Club Calendar</title>
    <link rel="stylesheet" type="text/css" href="/assets/Style.css">
     <link rel="title icon" type="image/png" href="/assets/colorado-mesa-logo.png">
    <link href="//fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
    <header>

        <div class="logo">
            <img src="/assets/colorado-mesa-logo.png">
        </div>

        <div class="headtit">
            <h1><span>Club Calendar</span></h1>
            <!--<img src="LoginImages/cce7e979-783a-49da-a126-7bf8855ba52e.png">-->
        </div>

        <nav>
            <a href="/"><button class="button" style="vertical-align:middle"><span> <i class="arrow left"></i> Back to Calendar  </span></button></a>
        </nav>

        </header>


        <section class="CreateAccount-Section">

            <h1>Let's fill out some information...</h1>
            <%- include ./partials/messages %>
            <form action="/users/register" method="POST">
                <div class="form-group">
                <label for="name"><b>Name</b></label>
                <input
                    type="name"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder=""
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                />
                </div>
                <div class="form-group">
                <label for="email"><b>Email</b></label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder=""
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                />
                </div>
                <div class="form-group">
                        <label for="userName"><b>Username</b></label>
                        <input
                            type="userName"
                            id="userName"
                            name="userName"
                            class="form-control"
                            placeholder=""
                            value="<%= typeof userName != 'undefined' ? userName : '' %>"
                        />
                        </div>
                <div class="form-group">
                <label for="password"><b>Password</b></label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder=""
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                />
                </div>
                <div class="form-group">
                <label for="password2"><b>Re-Enter Password</b></label>
                <input
                    type="password"
                    id="password2"
                    name="password2"
                    class="form-control"
                    placeholder=""
                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
                </div>
                <script>
                function response()
                {
                    alert("Thanks for joining our calendar, you've sucessfully signed up and can login when ready!");
                }
                </script>
                <button type="submit" onclick=response() class="btn btn-primary btn-block">
                Sign Up >
                </button>
        </form>
        </section>
        <!--End Third Section-->
        <footer>

        </footer>
    </div>

    <div id="bg-right"></div>
    <div id="bg-left"></div>
    <div id="bg-top"></div>

</body>
</html>
