
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Create Club
      </h1>
      <%- include ./partials/messages %>
      <form action="/clubs/createclub" method="POST">
        <div class="form-group">
          <label for="clubID">Club ID</label>
          <input
            type="clubID"
            id="clubID"
            name="clubID"
            class="form-control"
            placeholder="Enter clubID"
            value="<%= typeof clubID != 'undefined' ? clubID : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="Clubname">Name</label>
          <input
            type="Clubname"
            id="Clubname"
            name="Clubname"
            class="form-control"
            placeholder="Event Name"
            value="<%= typeof Clubname != 'undefined' ? Clubname : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="clubType">clubType</label>
          <input
            type="clubType"
            id="clubType"
            name="clubType"
            class="form-control"
            placeholder="Event Description"
            value="<%= typeof clubType != 'undefined' ? clubType : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="clubEmail">clubEmail</label>
          <input
            type="email"
            id="clubEmail"
            name="clubEmail"
            class="form-control"
            placeholder="clubEmail"
            value="<%= typeof clubEmail != 'undefined' ? clubEmail : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Create Club
        </button>
      </form>
    </div>
  </div>
</div>
